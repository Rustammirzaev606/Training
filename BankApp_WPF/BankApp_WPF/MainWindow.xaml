<Window x:Class="BankApp_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FFBDC993">
        <Label x:Name="lblBalance" Content="Label" HorizontalAlignment="Left" Margin="233,0,0,0" VerticalAlignment="Top" Height="84" Width="284" FontFamily="OCR A Extended" Background="#FF076A99" FontSize="48"/>
        <Button x:Name="btnDeposit" Content="Deposit" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="125" Height="100" Background="#FF17B61F" Cursor="Hand" FontSize="20" Click="btnDeposit_Click"/>
        <Button x:Name="btnWithdraw" Content="Withdraw" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top" Width="125" Height="100" Background="#FFB01818" Cursor="Hand" FontSize="20" Click="btnWithdraw_Click"/>
        <Label x:Name="label1" Content="Balance" HorizontalAlignment="Left" VerticalAlignment="Top" Height="84" Width="233" FontFamily="OCR A Extended" FontSize="48" Background="#FF076A99"/>

    </Grid>
</Window>
